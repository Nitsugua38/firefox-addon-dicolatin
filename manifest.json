{
	"description": "Faire des recherches dicolatin",
	"manifest_version": 2,
	"name": "Recherche Dicolatin",
	"version": "1.0",

	"permissions": [
		"activeTab",     
		"contextMenus"
	],

	"icons": {
		"48": "icons/48.png"

	},


	"background": {
		"scripts" : ["background.js"]
	},

	"browser_action": {
    	"default_icon": "icons/48.png",
    	"default_title": "Recherche Dicolatin",
    	"default_popup": "popup/index.html"
	}
}


